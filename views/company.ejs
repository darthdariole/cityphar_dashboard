<!DOCTYPE html>
<html>
<head>
    <title>
        Companies
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="javascripts/companySearch.js"></script>
</head>
<body>
<header>
    <%- include('nav.ejs') %>
</header>
<div class="card">
    <div class="card-body">
        <h5 class="card-title">Companies Module</h5>
        <h6 class="card-subtitle mb-2 text-body-secondary">Adding, Updating and various operations can be done here</h6>
        <p class="card-text">Some quick links mentioned below to make navigation a little easier</p>
        <a href="/company/new" class="btn btn-primary">Add New Company</a>
        <a href="/company/upload" class="btn btn-primary">Upload Excel file</a>
    </div>
</div>
<!-- Input Field for searching the table -->
<div class="input-group m-3">
    <span class="input-group-text" id="basic-addon1">Search</span>
    <input type="text" class="form-control" id="searchText" aria-label="Search" aria-describedby="basic-addon1" onkeyup="searchCompany()">
</div>
<!-- Table for displaying companies -->
<table class="table" id="companyTable">
    <thead>
    <tr>
        <th scope="col">#</th>
        <th scope="col">Company Id</th>
        <th scope="col">Company Description</th>
        <th scope="col">Actions</th>
    </tr>
    </thead>
    <tbody>
    <% for(var i=0; i < companies.length; i++) {%>
    <tr>
        <th scope="row"><%= i + 1 %></th>
        <td><%= companies[i].companyId %></td>
        <td><%= companies[i].companyDesc %></td>
        <td><a href="/company/edit/<%= companies[i].companyId %>">Edit</a></td>
    </tr>
    <% } %>
    </tbody>
</table>

</body>

</html>